<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.breakblog.dao.CategoryDao">
    <!--  定义Category的resultMap  -->
    <resultMap id="categoryPostMap" type="me.breakblog.entity.Category">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <!--配置Post对象中的Category集合的映射-->
        <collection property="posts" column="id" ofType="me.breakblog.entity.Post" select="me.breakblog.dao.PostDao.findByCategoryId"/>
    </resultMap>

    <select id="findAll" resultMap="categoryPostMap">
        select * from category
    </select>

    <select id="findById" resultType="me.breakblog.entity.Category" parameterType="Integer">
        select * from category where id=#{id}
    </select>
    <select id="findByName" resultType="me.breakblog.entity.Category" parameterType="String">
        select * from category where name=#{name}
    </select>

    <insert id="addCategory" parameterType="me.breakblog.entity.Category">
        insert into category (name) value (#{name})
    </insert>

    <update id="updateCategory" parameterType="me.breakblog.entity.Category">
        update category set name = #{name} where id = #{id}
    </update>

    <delete id="deleteCategory" parameterType="Integer">
        delete from category where id = #{id}
    </delete>
</mapper>